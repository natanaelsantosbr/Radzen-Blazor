@page "/column"
<PageTitle>Column</PageTitle>

<RadzenText TextStyle="TextStyle.H4" TagName="TagName.H2">
    Column  
</RadzenText>
<RadzenText TextStyle="TextStyle.Subtitle1" TagName="TagName.P" class="rz-pb-4">
